<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/topMoviesFragment">

    <fragment
        android:id="@+id/topMoviesFragment"
        android:name="com.podium.technicalchallenge.ui.topfive.TopMoviesFragment"
        android:label="@string/navi_top_movies_title"
        tools:layout="@layout/fragment_top_movies" >
        <action
            android:id="@+id/action_navigation_home_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.podium.technicalchallenge.ui.detail.MovieDetailsFragment"
        android:label="MovieDetailsFragment" >
        <argument
            android:name="movie"
            app:argType="com.podium.technicalchallenge.entity.MovieEntity" />
    </fragment>
    <fragment
        android:id="@+id/browseByAllFragment"
        android:name="com.podium.technicalchallenge.ui.browsebyall.BrowseByAllFragment"
        android:label="BrowseByAllFragment" >
        <action
            android:id="@+id/action_browseByAllFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/browseByGenreFragment"
        android:name="com.podium.technicalchallenge.ui.genre.BrowseByGenreFragment"
        android:label="BrowseByGenreFragment" >
        <action
            android:id="@+id/action_browseByGenreFragment_to_associatedMoviesFragment"
            app:destination="@id/associatedMoviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/associatedMoviesFragment"
        android:name="com.podium.technicalchallenge.ui.genre.AssociatedMoviesFragment"
        android:label="AssociatedMoviesFragment" >
        <argument
            android:name="genre"
            app:argType="string" />
        <action
            android:id="@+id/action_associatedMoviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

</navigation>
